---
import type { Item } from "../../content/sassdoc-schema";
import Show from "../Show.astro";
import styles from "./Deprecated.module.scss";
import { getLangFromEnv, useTranslations } from "../../i18n/utils";

export interface Props {
  item?: Item;
}

const { item } = Astro.props;
const { deprecated } = item!;

const lang = getLangFromEnv();
const t = useTranslations(lang);
---

<Show condition={deprecated}>
  <section class={styles.container}>
    <h4>
      <i class="material-symbols-sharp">warning</i>
      <span>{t("deprecated.label")}</span>
    </h4>
    <p>{deprecated}</p>
  </section>
</Show>
